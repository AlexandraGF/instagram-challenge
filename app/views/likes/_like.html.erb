<p>
  <strong>Like:</strong>
  <%= like.number %>
</p>

<p>
  <i>by <%= User.find(like.user_id).email %></i>
</p>

<p>
  <% if user_signed_in? && current_user.id == like.user_id %>
    <%= link_to 'Delete', post_like_path(like),
        method: :delete,
        data: { confirm: 'Are you sure?' } %>
  <% end %>
</p>
